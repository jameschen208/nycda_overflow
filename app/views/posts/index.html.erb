<h1 id="post_title">Top Questions</h1>
<div id="posts">
	<% @posts.each do |f| %>
	<div class="post">
		<h2><%= link_to f.title, f %></h2>
		<p >Votes: <%= f.get_upvotes.size - f.get_downvotes.size %></p>
		<p class="date">Published <%= time_ago_in_words(f.created_at) %>. Written by <%= f.user.email %></p>
		<div class="votes">
			<%= link_to like_post_path(f), method: :put, class: "btn btn-default btn-sm" do %>
				<i class="medium material-icons">thumb_up</i>
				Upvote
				<%= f.get_upvotes.size %>
			<% end %>
			<button class="white-text waves-effect waves-light btn">
				<%= link_to dislike_post_path(f), method: :put do %>
				<i class="medium material-icons">thumb_down</i>
				Downvote
				<%= f.get_downvotes.size %>
			<% end %>
			</button>
		</div>
	</div>
	<% end %>
</div>
